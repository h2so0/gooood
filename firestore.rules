rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // cache: 앱에서 읽기만 허용 (서버가 쓰기)
    match /cache/{doc} {
      allow read: if true;
      allow write: if false;
    }

    // products: 앱에서 읽기만 허용 (서버가 쓰기)
    match /products/{doc} {
      allow read: if true;
      allow write: if false;
    }

    // sent_notifications: 서버(Cloud Functions)만 읽기/쓰기
    match /sent_notifications/{doc} {
      allow read, write: if false;
    }

    // keyword_snapshots: 가격 추이 히스토리 (클라이언트 읽기/쓰기)
    match /keyword_snapshots/{keyword} {
      allow read: if true;
      allow write: if true;
    }

    // device_profiles: 클라이언트에서 자기 프로필 생성/수정 허용
    match /device_profiles/{tokenHash} {
      allow read: if false;
      allow create, update: if true;
      allow delete: if false;
    }
  }
}
